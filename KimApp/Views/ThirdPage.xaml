<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KimApp.Views.ThirdPage"
             Title="Add a Recipe">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Entry Text="{Binding Title}" Placeholder="Title"/>
            <Editor Text="{Binding Ingredients}" Placeholder="Ingredients"/>
            
            <Button Text="Select Image" Command="{Binding PickImageCommand}" />
            
            <Image Source="{Binding PhotoUrl}" Aspect="AspectFit"/>
            
            <Button Text="Add Recipe" Command="{Binding AddRecipeCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>